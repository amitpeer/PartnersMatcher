        <TextBox x:Name="textBox_groupContent" HorizontalAlignment="Left" Height="101" Margin="17,145,0,0" TextWrapping="Wrap" Text="" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="button_createGroup" Content="שלח" HorizontalAlignment="Left" Height="24" Margin="236,272,0,0" VerticalAlignment="Top" Width="96" HorizontalContentAlignment="Center" Click="button_createGroup_Click"/>
