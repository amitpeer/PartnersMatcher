        <Label x:Name="label_category" Content="קטגוריה" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Height="24" Margin="0,60,303,0" VerticalAlignment="Top" Width="84"/>
        <Label x:Name="label_location" Content="מיקום" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Height="24" Margin="0,107,303,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="textBox_title" HorizontalAlignment="Left" Height="24" Margin="303,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="176" HorizontalContentAlignment="Right"/>
