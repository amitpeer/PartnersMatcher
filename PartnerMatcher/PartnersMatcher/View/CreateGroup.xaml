        mc:Ignorable="d"
        Title="CreateGroup" Height="336.234" Width="585.999">
    <Grid>
        <Label x:Name="label_addNewGroup" Content="הוספת קבוצה חדשה" HorizontalAlignment="Right" Height="28" Margin="0,10,227,0" VerticalAlignment="Top" Width="130" HorizontalContentAlignment="Right"/>
        <Label x:Name="label_title" Content="שם הקבוצה" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Height="24" Margin="0,60,10,0" VerticalAlignment="Top" Width="84"/>
